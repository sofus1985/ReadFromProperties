<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- Report Theme -->
        <theme>dark</theme> <!-- Options: standard, dark -->

        <!-- Document Encoding -->
        <encoding>UTF-8</encoding>

        <!-- Protocol for script and stylesheets -->
        <protocol>https</protocol>

        <!-- Report Title -->
        <documentTitle>Extent Automation Report</documentTitle>

        <!-- Report Name (displayed in the top navigation bar) -->
        <reportName>Test Execution Report</reportName>

        <!-- Chart Location in Test View -->
        <testViewChartLocation>top</testViewChartLocation> <!-- Options: top, bottom -->

        <!-- Enable or Disable TimeStamp in Report -->
        <timeStampFormat>MMM dd, yyyy HH:mm:ss</timeStampFormat>

        <!-- Add system or environment details in the report -->
        <systemInfo>
            <param name="OS" value="Windows 11"/>
            <param name="Browser" value="Chrome"/>
            <param name="Executed By" value="Sofiane"/>
        </systemInfo>

        <!-- Log view order (newestFirst or oldestFirst) -->
        <logViewOrder>newestFirst</logViewOrder>

        <!-- Enable or Disable Offline Mode (use local resources) -->
        <offlineMode>true</offlineMode>

        <!-- Custom JavaScript -->
        <scripts>
            <![CDATA[
                $(document).ready(function() {
                    console.log("Extent Report Loaded Successfully");
                });
            ]]>
        </scripts>

        <!-- Custom CSS Styles -->
        <styles>
            <![CDATA[
                .report-name { color: #00ffcc !important; font-size: 24px; }
                .nav-logo { content: url('your-logo-url.png'); width: 150px; }
            ]]>
        </styles>
    </configuration>
</extentreports>
